<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar">

    <include layout="@layout/content_main" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="160dp"
        android:layout_marginRight="160dp"
        android:layout_marginBottom="85dp"
        android:text="SIGN UP" />

    <TextView
        android:id="@+id/rePassText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"

        android:layout_marginBottom="176dp"
        android:layout_toStartOf="@+id/rePassword"
        android:layout_toLeftOf="@+id/rePassword"
        android:text="Re-Enter Password :"
        android:textColor="#FF9800"
        android:visibility="visible" />

    <EditText
        android:id="@+id/rePassword"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_above="@+id/buttonRegister"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/rectangle"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#F6FAF9"
        android:textColorHighlight="#F6FAF9"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/passwordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rePassText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginEnd="87dp"
        android:layout_marginRight="87dp"
        android:layout_marginBottom="27dp"
        android:layout_toStartOf="@+id/password"
        android:layout_toLeftOf="@+id/password"
        android:text="Password :"
        android:textColor="#FF9800" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_above="@+id/rePassword"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/rectangle"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#F6FAF9"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/emailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/passwordText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="37dp"
        android:layout_toStartOf="@+id/eMailS"
        android:layout_toLeftOf="@+id/eMailS"
        android:text="E-Mail Id :"
        android:textColor="#FF9800" />

    <EditText
        android:id="@+id/eMailS"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_above="@+id/password"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/rectangle"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#F6FAF9" />

    <TextView
        android:id="@+id/uText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/emailText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginBottom="30dp"
        android:text="USERNAME :"
        android:textColor="#FF9800" />

    <EditText
        android:id="@+id/getUsername"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_above="@+id/eMailS"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/rectangle"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#F6FAF9" />

</RelativeLayout>